<h1>Create new rating</h1>

<%= form_for(@rating) do |f| %>
  <% if @rating.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited rating from being saved:</h2>

      <ul>
      <% @rating.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :beer_id, class: "form-label" %>
    <%= f.select :beer_id, options_from_collection_for_select(@beers, :id, :to_s, selected: @rating.beer_id), {}, { :class => "form-select" } %>
  </div>

  <div class="mb-3">
    <%= f.label :score, class: "form-label" %>
    <%= f.number_field :score, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>