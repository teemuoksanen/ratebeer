<p style="color: green"><%= notice %></p>

<h2>User</h2>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <% if @user.ratings.empty? %>
    User has not yet made any ratings!
  <% else %>
    User has made <%= pluralize(@user.ratings.count, 'rating') %>, average rating <%= @user.average_rating %>.<br />
    User's favorite beer style is <%= @user.favorite_style %>.<br />
    User's favorite brewery is <%= @user.favorite_brewery %>.
  <% end %>
</p>

<h3>Member of</h3>

<ul>
  <% @user.beer_clubs.each do |beer_club| %>
    <li>
      <%= link_to beer_club.name, beer_club %>
    </li>
  <% end %>
</ul>

<h3>Ratings</h3>

<ul>
  <% @user.ratings.each do |rating| %>
    <li>
      <%= rating.to_s %>
      <% if @user == current_user %>
        <%= button_to 'delete', rating, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } } %>
      <% end %>
    </li>
  <% end %>
</ul>

<div>
  <%= link_to "Back to users", users_path %>
  <% if @user == current_user %>
    | <%= link_to "Edit this user", edit_user_path(@user) %>
    <%= button_to "Destroy this user", @user, method: :delete %>
  <% end %>
</div>
