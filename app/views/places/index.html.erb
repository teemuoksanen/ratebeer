<h1>Beer places search</h1>

<p id="notice"><%= notice %></p>

<%= form_with url: places_path, method: :post do |form| %>
  city <%= form.text_field :city %>
  <%= form.submit "Search" %>
<% end %>

<% if @weather %>
  <h3>Current beer weather in <%= @weather.name %>:</h3>
  <p>
    <% @weather.weather_icons.each do |icon| %>
      <img src="<%= icon %>" />
    <% end %>
  </p>
  <p>Temperature: <strong><%= @weather.temperature %>&deg;C</strong><br />
  Wind: <strong><%= @weather.wind_speed %></strong>, direction <strong><%= @weather.wind_dir %></strong></p>
<% end %>

<% if @places %>
  <table>
    <thead>
      <th>id</th>
      <th>name</th>
      <th>status</th>
      <th>street</th>
      <th>city</th>
      <th>zip</th>
      <th>country</th>
      <th>overall</th>
    </thead>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.id %></td>
        <td><%= link_to place.name, place_path(place.id) %></td>
        <td><%= place.status %></td>
        <td><%= place.street %></td>
        <td><%= place.city %></td>
        <td><%= place.zip %></td>
        <td><%= place.country %></td>
        <td><%= place.overall %></td>
      </tr>
    <% end %>
  </table>
<% end %>